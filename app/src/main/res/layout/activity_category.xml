<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".category.MainActivity">

    <LinearLayout
        android:id="@+id/category_name"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="@drawable/edge">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="69dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="알 파"
            android:background="@drawable/main_frame2"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ems="10"
            android:hint="가게명 검색">

            <requestFocus />
        </EditText>

        <!--        <Button-->
        <!--            android:id="@+id/btn_input"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:tag="1"-->
        <!--            android:text="값입력(임시)" />-->

        <ImageButton
            android:id="@+id/btn_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="#ffffff"
            android:src="@drawable/search_img2" />

        <ImageButton
            android:id="@+id/btn_set"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="#ffffff"
            android:src="@drawable/set_image4"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/edge"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/Korean"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="112dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/category_frame"
                app:srcCompat="@drawable/korean" />

            <TextView
                android:layout_width="112dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="한식"
                android:textColor="#000000"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Boonsik"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/edge"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="112dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/category_frame"
                app:srcCompat="@drawable/boonsik" />

            <TextView
                android:layout_width="112dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="분식"
                android:textColor="#000000"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Chicken"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="112dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/category_frame"
                app:srcCompat="@drawable/chicken" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="112dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="치킨"
                android:textColor="#000000"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/edge"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/Pizza"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="112dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/category_frame"
                app:srcCompat="@drawable/pizza" />

            <TextView
                android:layout_width="112dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="피자"
                android:textColor="#000000"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Fastfood"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/edge"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="112dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/category_frame"
                app:srcCompat="@drawable/hamburger" />

            <TextView
                android:layout_width="112dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="패스트푸드"
                android:textColor="#000000"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Jokbal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="112dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/category_frame"
                app:srcCompat="@drawable/zokbal" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="112dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="족발•보쌈"
                android:textColor="#000000"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/edge"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/Cafe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="112dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/category_frame"
                app:srcCompat="@drawable/cafe" />

            <TextView
                android:layout_width="112dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="카페"
                android:textColor="#000000"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Etc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/edge"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="112dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/category_frame"
                app:srcCompat="@drawable/etc" />

            <TextView
                android:layout_width="112dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="기타"
                android:textColor="#000000"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Total"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="112dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/category_frame"
                app:srcCompat="@drawable/total2" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="112dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="전체보기"
                android:textColor="#000000"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
